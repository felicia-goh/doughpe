<div class="banner" id="home">
  <div class="container">
    <h1>The freshest bakes from local home bakers</h1>
    <p>Only dope bakes allowed</p>
    <form novalidate="novalidate" class="simple_form search" autocomplete="off" action="/search" accept-charset="UTF-8" method="get">
      <input name="utf8" type="hidden" value="&#x2713;" />
      <div class="search-form-control form-group input-cont">
        <input class="form-control string required" type="text" name="query" id="search_query" placeholder="Search bakers or products" value="<%= params[:query] %>" />
        <button type="submit" class="btn btn-primary">
          <i class="fas fa-search"></i> Search
        </button>
      </div>
    </form>
    <ul id="results">
    </ul>
  </div>
</div>


<div class="container mt-3">
  <h2>Featured bakers</h2>
  <div class="scrollmenu mb-3 d-flex">
    <% @bakers.each do |baker| %>
    <%= link_to baker_path(baker.username) do %>
    <div class="avatar-container">
      <% if baker.photo.attached? %>
        <%= cl_image_tag baker.photo.key, height: 150, width: 200, crop: :fill, class: "avatar-bordered-huge mx-3 mt-3 mb-1" %>
      <% else %>
        <img class="avatar-bordered-huge mx-3 mt-3 mb-1" src="https://source.unsplash.com/400x400/?bake" alt="product image">
      <% end %>
      <h6><%= baker.username %></h6>
    </div>
    <% end %>
    <% end %>
  </div>
</div>

<div class="container mt-3">
  <h2>Popular bakes</h2>
  <div class="scrollmenu mb-3">
    <% @products.each do |product| %>
    <div class="card m-3">
      <%= link_to baker_path(product.user.username) do %>
      <% if product.photo.attached? %>
        <%= cl_image_tag product.photo.key, height: 150, width: 200, crop: :fill, class: "card-img-top" %>
      <% else %>
        <div class="text-center">
          <i class="fas fa-cookie-bite fa-7x m-3"></i>
        </div>
      <% end %>
      <div class="card-body">
        <div class="card-title"><%= product.name %></div>
      </div>
      <% end %>
    </div>
    <% end %>
  </div>
</div>
