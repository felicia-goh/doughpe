
<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
  <%= image_tag "doughpe_logo.png", height: 40, width: 80, crop: :fill%>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto nav-row">
      <% if user_signed_in? %>
      <li class="nav-item active">
        <%= link_to "Home", root_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "nav-link" %>

      </li>
      <li class="nav-item dropdown">
        <% if current_user.photo.attached? %>

<!--         <%= cl_image_tag current_user.photo.key,height: 50, width: 50, crop: :fill, class: "avatar-none dropdown-toggle ", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
-->
<%= cl_image_tag current_user.photo.key, class: "avatar-large dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>

<% else %>
<i class="fas fa-user-circle fa-3x avatar",  id = "navbarDropdown", data-toggle="dropdown", aria-haspopup = true, aria-expanded = false ></i>
<% end %>
<div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
  <%= link_to "Profile", edit_user_path(current_user), class: "dropdown-item" %>
  <% if current_user.baker %>
  <%= link_to "View shop front", baker_path(current_user.username), class: "dropdown-item" %>
  <%= link_to "Add a product", new_product_path, class: "dropdown-item" %>

  <%= link_to "See all orders", orders_path, class: "dropdown-item" %>
  <% else %>
  <% if !session[:order].nil? %>

  <%= link_to "See all orders", orders_path, class: "dropdown-item" %>
  <% end %>
  <% end %>

</div>
</li>
<% else %>
<li class="nav-item">
  <%= link_to "Login", new_user_session_path, class: "nav-link" %>
</li>
<li>
  <%= link_to "Sign up", new_user_registration_path, class: "nav-link" %>
  <% end %>
</ul>
</div>
</div>
